// mixing
transform(n)
    -webkit-transform n
    -moz-transform n
    -ms-transform n
    -o-transform n
    transform n
transition(n)
    -webkit-transition n
    -moz-transition n
    -o-transition n 
    transition n
filter(n)
    -webkit-filter n
    filter n
border-radius(n)
    -webkit-border-radius n
    -moz-border-radius n 
    border-radius n
border-top-left-radius(n)
    -webkit-border-top-left-radius n
    -moz-border-top-left-radius n
    border-top-left-radius n
border-top-right-radius(n)
    -webkit-border-top-right-radius n
    -moz-border-top-right-radius n
    border-top-right-radius n

