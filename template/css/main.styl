/******************
	IE
******************/

@media all and (-ms-high-contrast: none), (-ms-high-contrast: active) {

  .iconos-mapa {
    right: none;
    left: 80px;
  }

	.iconos-mapa img {
		height: calc(6 * (1vw + 1vh - 1vmin));
  }

  .nosotros .row { 
    display: block;
  }

  .banner-ciudad h2 {
		font-size: calc(5 * (1vw + 1vh - 1vmin));
  }

}


