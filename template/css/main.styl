/******************
	COMPARAR CIUDADES
******************/

.comparar h2,
.resultados h2,
.indicadores-ciudad h1 {
  text-align: center;
  background: #1e73be;
  font-weight: bold;
  color: white;
  font-size: 30px;
  padding: 10px 20px 10px 20px;
}

.comparar {
    padding-top: 10px !important;    
}

.comparar h2 {
  margin-bottom: 0px;
}

.comparar .dropdown-menu {
  width: 100%;
}

.comparar #formComparar {
  background: #f6f6f6;
  padding: 15px;
}

.comparar .titulo-form {
  font-size: 12px;
  font-weight: bold;
  padding-top: 15px;
}

.comparar .btn-group,
.comparar .btn-group .multiselect {
  width: 100%;
  text-align: left;
  background: white;
}

.multiselect-all .checkbox {
  padding-left: 20px !important;
}

.multiselect-reset { 
  position: sticky;
}

.multiselect-reset {
  position: absolute;
  top: 40px;
  width: 100%;
  height: 36px
}

.multiselect-reset .input-group {
  margin: 0;
}

.multiselect-reset a {
  text-align: left !important;
  cursor: pointer;
  background: #e48c1cc7;
  color: white !important;
  width: 100%;
  text-align: center !important;
  font-size: 0.8rem;
  border-radius: 0;
}

.multiselect-all {
  padding-top: 30px !important;
}

.comparar .cerrar {
  position: sticky;
  padding-right: 10px;
  text-align: center;
  color: white;
  background-color: #58d647ed;  
  font-weight: bold;
  cursor: pointer;
  height: 40px;
  padding-top: 6px;
  margin-bottom: 10px;
  top: 0;
  z-index: 10;
}

.comparar .cerrar input {
  display: none;
}

.comparar .btn-group {
  border: 1px solid #ced4da;
  border-radius: .25rem;
  transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
}

.comparar .multiselect-container {
  padding-bottom: 20px;
  z-index: 1020;
}

#errorCiudad {
  margin-top: 30vh;
}

.comparar .multiselect-selected-text {
  white-space: initial;
}

.comparar .multiselect-item a,
.comparar .multiselect-container .checkbox {
  color: #495057;
}

.comparar .boton-sbt img {
  height: 25px;
  width: 25px;
}

.comparar .boton-sbt button {
  width: 100%;
  margin-top: 42px;
  background: #4093c3;
  border: none;
  cursor: pointer;
}

.resultados .col-lg-6 {
  min-width: 55%;
}

.resultados .interior-resultados {
  padding-right: 15px;
  padding-left: 15px;
}

.resultados .ciudad1,
.resultados .ciudad2,
.resultados .indicador,
.resultados .ciudada,
.resultados .ciudadb {
  font-weight: bold;
}

.resultados .indicador,
.resultados .ciudada,
.resultados .ciudadb {
  margin-bottom: 10px;
  padding-top: 16px;
  padding-bottom: 16px;
  border: 2px solid #4093c3;
}

.resultados .ciudad1,
.resultados .ciudad2 {
  margin-bottom: 13px;
  margin-top: 27px;
  color: #4093c3;
}

.resultados .ciudad1,
.resultados .ciudada {
  margin-right: 10px;
}

.resultados .ciudad2,
.resultados .ciudadb {
  margin-left: 10px;
}

.resultados .indicador {
  margin-right: 0;
}

.resultados .ciudad1,
.resultados .ciudad2,
.resultados .ciudada,
.resultados .ciudadb {
  text-align: center;
}


